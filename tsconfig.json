{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "jsxImportSource": "@emotion/react",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@components": ["./app/components/index.ts"],
      "@content": ["./app/content/index.ts"],
      "@styles": ["./app/components/styles.ts"],
      "@lib": ["./app/lib/index.ts"]
    }
  },
  "include": [
    "app/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vinxi",
    ".output"
  ]
}
